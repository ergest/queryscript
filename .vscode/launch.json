{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "extensionHost",
			"request": "launch",
			"name": "Launch VSCode Extension",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}/qvm-lsp"
			],
			"outFiles": [
				"${workspaceRoot}/client/out/**/*.js"
			],
			"autoAttachChildProcesses": true,
			"preLaunchTask": {
				"type": "npm",
				"script": "watch"
			},
			"env": {
				"SERVER_PATH": "${workspaceFolder}/target/debug/qvm-lsp"
			},
		},
		{
			"name": "Language Server E2E Test",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}/qvm-lsp",
				"--extensionTestsPath=${workspaceRoot}/qvm-lsp/client/out/test/index",
				"${workspaceRoot}/client/testFixture"
			],
			"outFiles": [
				"${workspaceRoot}/qvm-lsp/client/out/test/**/*.js"
			],
			"autoAttachChildProcesses": true,
			"env": {
				"SERVER_PATH": "${workspaceRoot}/target/debug/qvm-lsp"
			},
		}
	]
}