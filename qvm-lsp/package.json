{
	"name": "qvm-lsp",
	"description": "LSP for QueryVM",
	"author": "QueryVM Contributors",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/TODO/qvm"
	},
	"publisher": "qvm",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.74.0"
	},
	"activationEvents": [
		"onLanguage:plaintext"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "tql",
				"extensions": [
					".tql"
				],
				"aliases": [
					"Typed Query Language",
					"TypedQL",
					"tql"
				],
				"filenames": [],
				"configuration": "./syntaxes/tql.configuration.json"
			}
		],
		"grammars": [
			{
				"language": "tql",
				"scopeName": "source.sql",
				"path": "./syntaxes/SQL.plist"
			}
		],
		"commands": [
			{
				"command": "runQuery.start",
				"title": "Run a query",
				"category": "QueryVM"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"languageServerExample.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServerExample.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -b && cd webview && yarn run compile && cd ..",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./webview/src --ext .ts,.tsx --fix",
		"postinstall": "cd client && yarn install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^9.1.0",
		"@types/node": "^16.11.7",
		"@typescript-eslint/eslint-plugin": "^5.42.0",
		"@typescript-eslint/parser": "^5.42.0",
		"eslint": "^8.26.0",
		"mocha": "^9.2.1",
		"typescript": "^4.8.4"
	}
}
